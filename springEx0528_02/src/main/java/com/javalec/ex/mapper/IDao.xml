<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javalec.ex.dao.IDao">
    
     <select id="list" resultType="com.javalec.ex.dto.Bdto">
        select * from mvc_board order by bGroup desc, bStep asc
    </select>
    
    <insert id="write">
    	insert into mvc_board(bId,bName,bTitle,bContent,bHit,bGroup,bStep,bIndent) values(mvc_board_seq.nextval,#{param1},#{param2},#{param3},0,mvc_board_seq.currval,0,0)
    </insert>
    
    <select id="content_view" resultType = "com.javalec.ex.dto.Bdto">
    	select * from mvc_board where bId = #{param1}
    </select>
    
    <update id = "upHit">
    	update mvc_board set bHit = bHit+1 where bId = #{param1}
    </update>
    
    <select id ="modify_view" resultType = "com.javalec.ex.dto.Bdto">
    	select * from mvc_board where bId = #{bId}
    </select>
    
    <update id = "modify">
    	update mvc_board set bName = #{param2}, bTitle = #{param3}, bContent = #{param4} where bId = #{param1}
    </update>
    
    <select id = "reply_view" resultType = "com.javalec.ex.dto.Bdto">
    	select * from mvc_board where bId = #{bId}
    </select>
    
    <insert id = "reply">
    	insert into mvc_board(bId,bName,bTitle,bContent,bGroup,bStep,bIndent) values(mvc_board_seq.nextval,#{bName},#{bTitle},#{bContent},#{bGroup},#{bStep}+1,#{bIndent}+1)
    </insert>
    
    <update id = "replyShape">
    	update mvc_board set bStep=bStep+1 where bGroup=#{param1} and bStep>#{param2}
    </update>
   

</mapper>